-
  var skills = [{title: 'The basics', list: [{name: 'HTML5', value: 55}, {name: 'CSS3', value: 55}, {name: 'JavaScript (ES6)', value: 70}]},
  {title: 'Build tools', list: [{name: 'Gulp', value: 80}]},
  {title: 'Preprocessors/Template engines', list: [{name: 'Sass', value: 65}, {name: 'Pug', value: 65}]},
  {title: 'SCM', list: [{name: 'Git', value: 75}]}];

main.skills
  h3.skills__title Technical Skills
  each skill in skills
    .skill
      h4.skill__title #{skill.title}
      .skill__labels
        span.skill__level.skill__level--left Novice
        span.skill__level.skill__level--center Competent
        span.skill__level.skill__level--right Proficient
      ul.skill__list
        each item in skill.list
          li.skill__item
            meter.skill__meter(value=item.value min=0 max=100)
            .skill__label #{item.name}
